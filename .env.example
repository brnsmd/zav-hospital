# Zav Cloud Server Configuration
# Copy this file to .env and fill in your values
# For Railway: Set these as environment variables in Railway dashboard

# Database Configuration
# Get this from Railway PostgreSQL service
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://user:password@localhost:5432/zav_hospital

# Telegram Bot Configuration
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefgh

# Google Sheets Configuration (optional, base64 encoded JSON)
# If you want Google Sheets sync, upload your service account JSON as base64
GOOGLE_SHEETS_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Server Configuration
PORT=8000
DEBUG=False

# Optional: For local development
FLASK_ENV=development
FLASK_DEBUG=False
